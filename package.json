{
  "name": "remix-template-arc",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/tailwind.css",
    "dev:remix": "remix watch",
    "dev:arc": "cross-env NODE_ENV=development arc sandbox",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/tailwind.css",
    "dev": "remix build && run-p dev:*",
    "start": "cross-env NODE_ENV=production arc sandbox",
    "format:check": "prettier --check **/*.{js,jsx,tsx,ts,json}",
    "format:write": "prettier --write **/*.{js,jsx,tsx,ts,json}",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "typecheck": "tsc -b",
    "prepare": "husky install"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.1.18",
    "@remix-run/architect": "^1.3.5",
    "@remix-run/node": "^1.3.5",
    "@remix-run/react": "^1.3.5",
    "classnames": "^2.3.1",
    "cross-env": "^7.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@architect/architect": "^10.2.1",
    "@remix-run/dev": "^1.3.5",
    "@remix-run/eslint-config": "^1.3.5",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.4",
    "concurrently": "^7.1.0",
    "eslint": "^8.11.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "eslintIgnore": [
    "/node_modules",
    "/server/index.js",
    "/public/build"
  ],
  "lint-staged": {
    "*.{tsx,ts}": [
      "prettier --write",
      "eslint --cache --fix --max-warnings=0",
      "typecheck -b"
    ]
  }
}
